<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:contentDescription="Logo Mue"
        android:src="@drawable/logo_mue_dev" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/helvetica_neue_bold"
        android:gravity="center"
        android:text="Sign in Mue"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:inputType="textEmailAddress"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:importantForAutofill="no"
        android:padding="16dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:inputType="textPassword"
        android:importantForAutofill="no"
        android:drawableEnd="@drawable/ic_visibility_off"/>

    <EditText
        android:id="@+id/retype_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:background="@android:drawable/edit_text"
        android:hint="Retype Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:drawableEnd="@drawable/ic_visibility_off"/>

    <Button
        android:id="@+id/btnSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/spotify_green"
        android:fontFamily="@font/helvetica_neue_medium"
        android:paddingVertical="14dp"
        android:textSize="16sp"
        android:text="Sign in"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Login now!"
        android:textColor="@color/white"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="16sp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:layout_marginTop="20dp" />
</LinearLayout>
